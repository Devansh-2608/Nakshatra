    <a class="speedbutton" id="right"><i class="fa-solid fa-jet-fighter-up " style="font-size:3rem; color:white;"></i></a>
  </div>

  

  <div id="myToast" class="toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
    <div class="d-flex">
